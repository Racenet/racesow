setFont "virtue_12"
setCursor #WIDTH, 510
movePixelCursor -70, 0

//draw Strings:
//	Race Time
//	Own Best
//	Server Best
if %RACE
	setColor 0.8 0.8 0.8 1
	setAlign #RIGHT, #MIDDLE
	if %TIME_SELF != #NOTSET
		drawString "Time: "
	endif
	movePixelCursor 0, 15
	if %TIME_BEST != #NOTSET
		drawString "Own Best: "
	endif
	movePixelCursor 0, 15
	if %TIME_RECORD != #NOTSET
		drawString "Srv Best: "
	endif
	movePixelCursor 0, -30
endif


//draw Times
setColor 1 1 1 1
setAlign #LEFT, #MIDDLE
if %TIME_SELF != #NOTSET
	drawTimer %TIME_SELF
endif
movePixelCursor 0, 15
if %TIME_BEST != #NOTSET
	drawTimer %TIME_BEST
endif
movePixelCursor 0, 15
if %TIME_RECORD != #NOTSET
	drawTimer %TIME_RECORD
endif

