//crazy big timer

// minus time


setFont "virtue_16"

if %TIME_SELF < %TIME_BEST

    setAlign #CENTER, #BOTTOM
    setcolor 0, 1, 0, 1
    setCursor 400, 50
    drawTimer %TIME_SELF

endif

if %TIME_SELF > %TIME_BEST

    setAlign #CENTER, #BOTTOM
    setcolor 1, 0, 0, 1
    setCursor 400, 50
    drawTimer %TIME_SELF - %TIME_BEST
endif


